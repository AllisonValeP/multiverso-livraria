                <form action="/adm/create-product" method="post" enctype="multipart/form-data">
                    <div class="form-elements-adm-product">
                        <label class="label-adm-product">Titulo</label>
                        <input id="name" type="text" name="name" class="input-adm-product"
                            value="<%=product.name%>">
                      
                    </div>
                    <div class="form-elements-adm-product">
                        <label class="label-adm-product">Nome Autor(a)</label>
                        <select required name="author_id" id="author_id" class="input-adm-product  ">

                            <option value="<%=product.author.id%>"  selected><%=product.author.name%> <%=product.author.last_name%> </option>

                            <%for(author of authors){%>
                                <option class="label-adm-product " value=<%=author.id%>><%=author.name%> <%=author.last_name%></option>
                                <%}%>
                                    
                        </select>
                    </div>

               
                    <div class="form-elements-adm-product row-3">
                        <label for="pass" class="label-adm-product">Editora</label>
                        <select required name="publisher_id" class="input-adm-product select-form ">
                            <option value="<%=product.publisher.id%>"  selected><%=product.publisher.name%> </option>
                            <%for(publisher of publishers){%>
                                <option class="label-adm-product " value=<%=publisher.id%>><%=publisher.name%>
                                </option>
                                <%}%>
                        </select>

                    </div>
                    <div class="form-elements-adm-product">
                        <label for="pass" class="label-adm-product">Categoria</label>
                        <select required name="category_id" class="input-adm-product select-form   ">
                            <option value="<%=product.category.id%>"  selected><%=product.category.name%> </option>
                            <%for(category of categories){%>
                                <option class="label-adm-product" value=<%=category.id%>><%=category.name%>
                                </option>
                                <%}%>
                        </select>
                    </div>
                    <div class="form-elements-adm-product column-3 row-1">
                        <label for="pass" class="label-adm-product">Quantidade</label>
                        <input id="stock" type="number" name="stock" class="input-adm-product"
                            data-type="number"  value="<%=product.stock%>" >
                            
                    </div>
                    <div class="form-elements-adm-product column-3 row-1">
                        <label for="pass" class="label-adm-product">Pre√ßo</label>
                        <input id="price" type="text" name="price" class="input-adm-product" data-type="number" value="<%=product.price%>">
                       
                    </div>
                    <div class="form-elements-adm-product column-3 row-3">
                        <label for="pass" class="label-adm-product">Capa</label>

                        <div class='input-wrapper input-adm-product'>
                            <label for='input-file'>
